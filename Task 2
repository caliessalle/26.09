#include <iostream>
using namespace std;
 
int main() {
    const char* font_colors[] = {
        "\033[30m",
        "\033[31m",
        "\033[32m",
        "\033[33m",
        "\033[34m",
        "\033[35m",
        "\033[36m",
        "\033[37m"
    };

    const char* bg_colors[] = {
        "\033[40m",
        "\033[41m",
        "\033[42m",
        "\033[43m",
        "\033[44m",
        "\033[45m",
        "\033[46m",
        "\033[47m"
    };

    int font, bg;

    cout << "Виберіть колір тексту (0-7): ";
    cin >> font;
    cout << "Виберіть колір фону (0-7): ";
    cin >> bg;

    cout << bg_colors[bg] << font_colors[font];
    cout << "Колір змінено." << endl;

    return 0;
}
